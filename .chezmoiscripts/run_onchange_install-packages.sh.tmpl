{{ if eq .chezmoi.os "linux" -}}
#!/bin/bash
# Install additional packages beyond base omarchy

set -e

echo "Installing additional packages..."

# Install packages from official repos
sudo pacman -S --needed --noconfirm \
  keyd \
  git-delta \
  git-town

# Install AUR packages
yay -S --needed --noconfirm claude-code

# Copy keyd config to /etc
sudo mkdir -p /etc/keyd
sudo cp "{{ .chezmoi.sourceDir }}/etc/keyd/default.conf" /etc/keyd/default.conf

# Enable and start service
sudo systemctl enable --now keyd

echo "Package installation complete"
{{ end -}}
